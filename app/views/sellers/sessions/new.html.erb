<%= render "shared/s-header" %> 


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class='form-box'>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ログイン
      </h1>
    </div>
    <%= render 'shared/error_messages', model: f.object %> 

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-default" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"input-default" %>
    </div>

  <div class='register-btn'>
      <%= f.submit "Log in" ,class:"register-login-btn" %>
    </div>
  </div>
</div> 
<% end %>

<%= render "shared/s-footer"%>
