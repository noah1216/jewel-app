<%= render "shared/header" %> 

<div class="contents-row">
  <div class="mypage-main">
    <div class="mypage-profile-box">
      <h2><%= @seller.nickname %></h2>
      <%= image_tag("profile_icon.png", class:"profile-icon") %>
      <% if current_seller == @seller.id %>
      <div class="mypage-update">
        <%= link_to 'ユーザー編集',  edit_my_seller_path(current_seller.id), class: "default_link_white" %>
      </div>
      <% end %>
    </div>
  </div>

    <div class='items-search-box'>
    <div class='items-contents'>
      <h2>商品一覧</h2>
    </div>
    <div class="mama">
    <ul class='item-lists'> 
      <% if @items.present? %>
      <% @items.each do |item| %>
          <li class='list'>
            <%= link_to item_path(item.id),class: "default_link_none" do %>
            <div class='item-img-content'>
              <%= image_tag item.image, class: "item-img" %>
              <% if item.order != nil  %> 
                <div class='sold-out'>
                  <span>Sold Out!!</span> 
                </div> 
              <% end %> 
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= item.name %>
              </h3>
              <div class='item-price'>
                <span><%= item.price %>円<br><%= item.shopping_fee.name %></span>
              </div>
            </div>
            <% end %>
          </li>
      <% end %>
    <% end %>
      </ul>
  </div>
</div>